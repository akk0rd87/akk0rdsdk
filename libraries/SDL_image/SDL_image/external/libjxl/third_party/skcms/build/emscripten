cc      = emcc
cxx     = em++
cflags  = -g3 -s WASM=1 -s ENVIRONMENT=node
ldflags = -g3 -s WASM=1 -s ENVIRONMENT=node --embed-file profiles
exe     = .js
out     = out/emscripten$mode

node = 'node'

rule run
    command = if which $node >/dev/null; $
              then $
                  $node $in > $out; $
              else touch $out; fi
    description = run $in

include build/common

disabled = (uname | grep -qv Linux)
